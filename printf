#include <stdarg.h>
#include <stdio.h>
#include "main.h"

/**
 * _printf -  produces output according to a format.
 * @format: character string
 * Return: 0
 */

int _printf(const char *format, ...)
{
    va_list list;
    va_start(list, format);

    int count = 0;

    while (*format != '\0')
    {
        if (*format == '%')
        {
            format++;

            switch (*format)
            {
                case 'c':
                    count += printf("%c", va_arg(list, int));
                    break;
                case 's':
                    count += printf("%s", va_arg(list, char *));
                    break;
                case '%':
                    count += putchar('%');
                    break;
                default:
                    count += putchar('%');
                    count += putchar(*format);
                    break;
            }
        }
        else
        {
            count += putchar(*format);
        }

        format++;
    }

    va_end(list);

    return (count);
}
